{
    "files.associations": {
      "infrastructure/**/*.tf": "terraform",
      "kubernetes/**/*.sops.toml": "plaintext"
    },
    "prettier.configPath": ".github/linters/.prettierrc.yaml",
    "prettier.ignorePath": ".github/linters/.prettierignore",
    "yaml.schemas": {
      "ansible": ["infrastructure/ansible/*.yml", "infrastructure/ansible/*.yaml"],
      "kubernetes": ["kubernetes/*.yml", "kubernetes/*.yaml"]
    },
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs":"active",
    "editor.hover.delay": 1500,
    "explorer.autoReveal": true,
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/.classpath": false,
      "**/.factorypath": true,
      "**/.project": true,
      "**/.settings": true
    },
    "explorerExclude.backup": {},
}
