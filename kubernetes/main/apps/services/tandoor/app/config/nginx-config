events {
  worker_connections 1024;
}
http {
  include /opt/bitnami/nginx/conf/mime.types;
  server {
    listen 8080;
    server_name _;
    client_max_body_size 128M;
    # serve media files
    location /media/ {
      alias /media/;
    }
    # serve static files
    location /static/ {
      alias /static/;
    }
  }
}
